@model Domain.Models.Restaurant

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Название</dd>
        <dt class="col-sm-2">Адрес</dt>
        <dd class="col-sm-10">@Model.Адрес</dd>
        <dt class="col-sm-2">Телефон</dt>
        <dd class="col-sm-10">@Model.Телефон</dd>
        <dt class="col-sm-2">Часы работы</dt>
        <dd class="col-sm-10">@Model.ЧасыРаботы</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
