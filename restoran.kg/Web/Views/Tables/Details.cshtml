@model Domain.Models.Table

@{
    ViewData["Title"] = "Table Details";
}

<h2>Table Details</h2>

<div>
    <h4>Table</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Number</dt>
        <dd class="col-sm-10">@Model.Number</dd>

        <dt class="col-sm-2">Seats</dt>
        <dd class="col-sm-10">@Model.Seats</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Restaurant</dt>
        <dd class="col-sm-10">@Model.Restaurant?.Название</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
